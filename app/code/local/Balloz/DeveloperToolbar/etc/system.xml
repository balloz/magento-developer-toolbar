<?xml version="1.0"?>
<config>
    <tabs>
        <balloz translate="label">
            <label>Balloz</label>
            <sort_order>100</sort_order>
        </balloz>
    </tabs>
    <sections>
        <developertoolbar translate="label" module="developertoolbar">
            <label>Developer toolbar</label>
            <tab>balloz</tab>
            <frontend_type>text</frontend_type>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <loadjquery translate="label">
                            <label>Load jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </loadjquery>
                        
                        <loadinalternate translate="label">
                            <label>Load Javascript in Alternate Block</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <comment><![CDATA[If your other javascript loads in another block of type page/html_head, you can set the developer toolbar to also use that block here to get around ordering issues]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </loadinalternate>
                        
                        <alternateblock translate="label">
                            <label>Alternate Block Name</label>
                            <frontend_type>text</frontend_type>
						     <comment><![CDATA[The name of the alternate page/html_head to load the javascript in]]></comment>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </alternateblock>
                        
                        <loadjqueryinadmin translate="label">
                            <label>Load jQuery in Admin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <comment><![CDATA[Load jQuery just for the admin area. Will always be loaded in the head block]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </loadjqueryinadmin>
                        
                        <ips translate="label">
                            <label>IP restrictions</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Comma-separated list of ip addresses to show the toolbar for. Leave this empty to show toolbar for all ip addresses.]]></comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ips>
						
						<exclusions translate="label">
							<label>Module Exclusions</label>
							 <frontend_type>text</frontend_type>
							  <comment><![CDATA[Disable adding layout markup to a certain module's blocks (comma separate)]]></comment>
                              <sort_order>20</sort_order>
                              <show_in_default>1</show_in_default>
                              <show_in_website>1</show_in_website>
                              <show_in_store>1</show_in_store>
						</exclusions>
						
						<excludeforajax translate="label">
							<label>Exclude From AJAX Requests</label>
							 <frontend_type>select</frontend_type>
							 <source_model>adminhtml/system_config_source_yesno</source_model>
							  <comment><![CDATA[Disable adding block markers in ajax requests]]></comment>
                              <sort_order>30</sort_order>
                              <show_in_default>1</show_in_default>
                              <show_in_website>1</show_in_website>
                              <show_in_store>1</show_in_store>
						</excludeforajax>
                        
                       
                    </fields>
                </settings>
            </groups>
        </developertoolbar>
    </sections>
</config>
